    "version": "2.0.0",
    "tasks": [
        {
            "label": "build book",
            "command": "pdflatex",
            "type": "shell",
            "args": [
                "GamingSystemTheHandbook.tex",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "build chapter",
            "command": "pdflatex",
            "type": "shell",
            "args": [
                "${fileBasename}",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$msCompile",
        }
    ]
}